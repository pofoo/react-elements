{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "paths": {
        "@components/*": ["components/*"],
        "@layout/*": ["layout/*"],
        "@types/*": ["types/*"],
        "@lib/*": ["lib/*"],
        "@hooks/*": ["hooks/*"],
        "@elements/*": ["elements/*"],
        "@pages/*": ["pages/*"],
        "@stories/*": ["stories/*"],
      }
    },
    "include": ["next-env.d.ts", "**/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
    "exclude": [
      "node_modules",
    ]
}